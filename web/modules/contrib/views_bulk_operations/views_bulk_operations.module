<?php

/**
 * @file
 * Allows operations to be performed on items selected in a view.
 */

declare(strict_types=1);

use Drupal\Core\Hook\Attribute\LegacyHook;
use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\views_bulk_operations\Hook\ViewsBulkOperationsHooks;

/**
 * Implements hook_views_data_alter().
 */
#[LegacyHook]
function views_bulk_operations_views_data_alter(array &$data): void {
  \Drupal::service(ViewsBulkOperationsHooks::class)->viewsDataAlter($data);
}

/**
 * Implements hook_help().
 */
#[LegacyHook]
function views_bulk_operations_help(string $route_name, RouteMatchInterface $route_match): ?string {
  return \Drupal::service(ViewsBulkOperationsHooks::class)->help($route_name, $route_match);
}

/**
 * Implements hook_preprocess_THEME().
 */
#[LegacyHook]
function views_bulk_operations_preprocess_views_view_table(array &$variables): void {
  \Drupal::service(ViewsBulkOperationsHooks::class)->preprocessViewsViewTable($variables);
}
