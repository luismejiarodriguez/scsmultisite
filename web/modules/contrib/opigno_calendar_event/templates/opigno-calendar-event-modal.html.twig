{#
/**
 * @file
 * Default theme implementation to display the Opigno calendar event form popup.
 *
 * Available varaibles:
 * - title: the popup title;
 * - body: the popup body.
 * - close: show close button.
 */
#}

<div class="modal modal-ajax calendar-event-modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered edit-discussion-modal modal-event-date" role="document">
    <div class="modal-content">
      <div class="modal-header">
        {% if title is not empty %}
          <h2 class="modal-title">{{ title }}</h2>
        {% endif %}
        {% if close is not empty %}
          <a href="{{ path('opigno_learning_path.close_modal') }}" class="close use-ajax" type="button" aria-label="{{ 'Close'|t }}" data-dismiss="modal">
            <i class="fi fi-rr-cross-small"></i>
          </a>
        {% endif %}
      </div>
      <div class="modal-body">{{ body }}</div>
    </div>
  </div>
</div>
